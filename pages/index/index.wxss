/* swiper */
.swiperBox{
        height: auto;
        padding-top: 90rpx;
        position: relative;
}
swiper{
        margin-top: -1rpx;
}

swiper image{
        width: 100%;
        height: 100%;
}
.dots{
        position: absolute;
        width: 100%;
        text-align: center;
        bottom: 20rpx;
        left: 0;
}
.dot{
        display: inline-block;
        box-sizing: border-box;
        height: 30rpx;
        width: 30rpx;
        border: 3rpx solid #989495;
        background-color: #DDDDDD;
        border-radius: 50%;
        margin: 0 10rpx;
}
.dot.active{
        background-color:#B73E23;
}

/* 切换栏 */
.nav-tab{
        background-color: #fff;
        width: 100%;
        height: 90rpx;
        box-sizing: border-box;
        display: flex;
}
.nav-tab.isFixed{
        position: fixed;
        top: 90rpx;
        left: 0;
        z-index: 100;
}
.nav-tab .flex-item{
        box-sizing: border-box;
        height: 100%;
        font-size: 36rpx;
        line-height: 90rpx;
        font-weight: normal;
        flex: 1;
        text-align: center;
}
.nav-tab .flex-item.active{
        border-bottom: 6rpx solid #D14627;
        color: #D14627;
}

/* 商品框 */
.goodsBox{
        /* position: relative; */
        overflow: hidden;
        height: auto;
        width: 100%;
}
.goodsBox.isFixed{
        padding-top: 90rpx;
}
.goodsBox .goodItem{
        position: relative;
        float: left;
        box-sizing: border-box;
        width: 46.5%;
        min-height: 560rpx;
        padding: 20rpx 24rpx;
        margin-top: 25rpx;
        margin-left: 20rpx;
        background-color: #FAFAFA;
}
.goodsBox .goodItem .imgBox{
        width: 100%;
        height: 306rpx;
        border-radius: 8rpx;
        overflow: hidden;
}
.goodsBox .goodItem .imgBox image{
        width: 100%;
        height: 306rpx;        
}
.goodsBox .goodItem .goodTitle{
        line-height: 50rpx;
}
.goodsBox .goodItem .goodTitle text{
        margin-top: 10rpx;
        width: 100%;
        height: 100rpx;
        /* 设置文字超出两行后显示省略号 */
        font-size: 34rpx;
        /* line-height: 32rpx; */
        display: -webkit-box;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: normal !important;
        word-wrap: break-word;
        -webkit-box-orient: vertical;
        -webkit-line-clamp:2;
}

.goodsBox .goodItem .goodPrice{
        position: relative;
        margin: 0;
        padding: 0;
        margin: 10rpx 0;
        padding-left: 30rpx;
        color: #D14627;
        font-size: 40rpx;
        height: 40rpx;
        line-height: 1;
}
.goodsBox .goodItem .goodPrice::before{
        position: absolute;
        top: 0;
        left: -6rpx;
        content: '￥';
        color: #CD472A;
        font-size: 40rpx;
        height: 40rpx;
        line-height: 1;
}
.goodsBox .goodItem .oldPrice{
        font-size: 28rpx;
        color: #959593;
        text-decoration: line-through;
}
.goodsBox .goodItem .soldOut{
        display: inline-block;
        line-height: 1;
        color: #959593;
        
}
.goodsBox .goodItem .soldOut text{
        font-size: 30rpx;
}
.goodsBox .goodItem .hotSale{
        display: none;
}
.goodsBox .goodItem .hotSale.isHotSold{
        display: block;
        position: absolute;
        bottom: 26rpx;
        right: 10rpx;
        width: 90rpx;
        height: 30rpx;
        overflow: hidden;
        border-radius: 6rpx;
        box-shadow: 6rpx 6rpx 8rpx #B0868A;
}
.goodsBox .goodItem .hotSale image{
        display: block;
        width: 90rpx;
        height: 30rpx;
}

/* 底线 */
