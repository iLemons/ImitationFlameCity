/* pages/mine/mine.wxss */

view{
        box-sizing: border-box;
}
.bodyBox{
        margin-top: 90rpx;
        height: auto;
        background-color: #EFEFEF;
}
/* 顶部 */
.hearder-img-box {
        position: fixed;
        z-index: 100;
        top: 0;
        left: 0;
        width: 100%;
        height: 90rpx;
        border: 0;
}
 .hearder-img-box .header-text {
        display: block;
        width: 100%;
        height: 90rpx;
        line-height: 90rpx;
        color: #fff;
        text-align: center;
        background-repeat:no-repeat; 
        background-size:100% 100%;
}
.vipMsgBox{
        background-image: url('http://www.hs1105.com/static/home/images/header-bg.png');
        background-repeat:no-repeat; 
        background-size:100% 100%;
        -moz-background-size:100% 100%;
}
.vipMsgBox view {
        box-sizing: border-box;
}
.vipInfo{
        width: 24%;
        height: 100%;
        margin: 0 auto;
}
.vipInfo image{
        width: 100%;
        height: 180rpx;
        margin-top: 25rpx;
        border-radius: 50%;
        border: 6rpx solid #843018;
}
.vipInfo .userMsg{
        width: 100%;
        text-align: center;
        font-size: 34rpx;
        color: #fff;
}

/* 购物信息 */
.tradeMenusBox{
        width: 100%;
        height: 160rpx;
        margin-top: 5rpx;
        margin-bottom: 15rpx;
        padding: 15rpx 0;
        background-color: #fff;
}
.tradeMenu{
        position: relative;
        float: left;
        width: 20%;
        height: 100%;
        text-align: center;
        border-right: 2rpx solid #F7F3F7;
}
.tradeMsgLength{
        position: absolute;
        top: -5rpx;
        right: 5rpx;
        font-size: 28rpx;
        color: #CE4729;
}
.tradeIcon{
        width: 100%;
        height: 60%;
}
.tradeIcon image{
        width: 60rpx;
        height: 60rpx;
        
}
.tradeTitle{
        width: 100%;
        height: 40%;
        font-size: 32rpx;
}

/* 其他信息 */
.otherMsgBox{
        width: 100%;
        /* height: 500rpx; */
        height: auto;
}
.msgItem{
        width: 100%;
        height: 100rpx;
        margin-bottom: 5rpx;
        background-color: #fff;
}
.marginTop{
        margin-top: 10rpx;
}
.mgsLeft{
        width: 50%;
        height: 100%;
}
.imgBox{
        width: 30%;
        height: 100%;
        padding-top: 15rpx; 
        text-align: center;
}
.imgBox image{
        width: 70rpx;
        height: 70rpx;
}
.msgTitle{
        width: 70%;
        height: 100%;
        font-size: 34rpx;
        line-height: 110rpx;
}
.msgRight{
        width: 50%;
        height: 100%;
}
.iconBox{
        width: 100%;
        height: 100%;
        text-align: right;
}
.iconBox image{
        margin-top: 40rpx;
        padding-right: 20rpx;
        width: 30rpx;
        height: 30rpx;
}

/* 技术支持 */
.technicalMsgBox{
        width: 100%;
        height: 110rpx;
        text-align: center;
}
.technicalMsgBox text{
        font-size: 26rpx;
        color: #CECBCE;
}
.technicalMsgBox .telNum{
        color: #4249DE;
}


/* 联系客服 */
.maskBox{
        position: fixed;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        /* z-index: 100; */
        background-color: rgba(0, 0, 0, 0.6)
 }

.contentBox{
        margin-top: 380rpx;
        width: 100%;
}
.content_imgBox{
        margin: 0 auto;
        width: 380rpx;
        height: 380rpx;
}
.content_imgBox image{
        width: 100%;
        height: 100%;
}
.content_textBox{
        width: 100%;
        height: auto;
        text-align: center;
        margin-top: 20rpx;
}
.content_textBox text{
        font-size: 30rpx;
        color: #fff;
        text-shadow: 10rpx 10rpx 8rpx #843018;
}
